{
  "name": "@krashnakant/next-keycloak",
  "description": "An authentication library based on Keycloak for NextJs applications",
  "author": "Krashna Chaurasia",
  "repository": "https://github.com/krashnakant/nextjs-keycloak.git",
  "module": "dist/krashnakant-next-keycloak.esm.js",
  "version": "1.1.2",
  "license": "MIT",
  "main": "dist/krashnakant-next-keycloak.cjs.js",
  "typings": "dist/index.d.ts",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "keywords": [
    "Keycloak",
    "React",
    "NextJs",
    "Hook",
    "Authentication"
  ],
  "scripts": {
    "start": "preconstruct dev",
    "build": "preconstruct build",
    "format": "prettier --write \"src/**/*.tsx\" \"test/**/*.tsx\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.tsx\" --fix",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "husky": {
    "hooks": {
      "pre-commit": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix"
    }
  },
  "size-limit": [
    {
      "path": "dist/krashnakant-next-keycloak.cjs.prod.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/krashnakant-next-keycloak.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@babel/core": "^7.20.7",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-react": "^7.18.6",
    "@babel/preset-typescript": "^7.18.6",
    "@preconstruct/cli": "^2.2.2",
    "@size-limit/preset-small-lib": "^8.1.0",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.10",
    "@typescript-eslint/eslint-plugin": "^5.47.1",
    "@typescript-eslint/parser": "^5.47.1",
    "eslint": "^8.30.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.2",
    "keycloak-js": "^20.0.2",
    "prettier": "^2.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "size-limit": "^8.1.0",
    "tslib": "^2.4.1",
    "typescript": "^4.9.4"
  }
}
